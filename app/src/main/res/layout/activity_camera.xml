<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="#00766f"
    tools:context="capstone_clive_odane_ashle.optical_proto1.CameraActivity">

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/Button_CaptureImage"
        android:id="@+id/button4"
        android:onClick="LaunchCamera"
        android:background="#05455F"
        android:minWidth="150dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_above="@+id/button4"
        android:layout_alignParentTop="true"
        android:adjustViewBounds="false"
        android:visibility="visible" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/Button_OCR"
        android:id="@+id/button6"
        android:onClick="goto_OCRMode"
        android:background="#B5775F"
        android:layout_alignTop="@+id/button4"
        android:layout_alignParentEnd="true"
        android:minWidth="150dp" />
</RelativeLayout>
